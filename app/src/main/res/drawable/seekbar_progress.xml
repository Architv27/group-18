<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Track -->
    <item>
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#D3D3D3"/> <!-- Light grey background -->
        </shape>
    </item>

    <!-- Progress Track -->
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="20dp" />
                <solid android:color="#8E8FFA"/> <!-- Red progress -->
            </shape>
        </scale>
    </item>
</layer-list>
