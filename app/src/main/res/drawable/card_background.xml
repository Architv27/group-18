<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/> <!-- Adjust the color and opacity for the shadow -->
            <corners android:radius="4dp"/> <!-- Adjust the corner radius -->
            <padding
                android:bottom="2dp"
                android:right="2dp" />
        </shape>
    </item>

    <!-- White card layer -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color -->
            <corners android:radius="4dp"/> <!-- Match corner radius with the shadow -->
        </shape>
    </item>
</layer-list>
